<div class="container">
  <div class="row">
    <div class="col-sx-12 col-sm-5 col-md-4 col-lg-3">
      <%= image_tag 'http://via.placeholder.com/350x350', class: "img-responsive center-block"%>
    </div>
    <div class="col-sx-12 col-sm-7 col-md-8 col-lg-9">
      <h2><%= @user.name %></h2>
      <p><strong><%= @user.email %></strong></p>
      <div><%= simple_format @user.intro %></div>
      <% if @user.email == current_user.email %>
        <%= link_to 'edit profile',edit_user_path(@user), class: "btn btn-primary" %> 
      <% end %>
    </div>
    <div class="clearfix"></div>
  </div>
</div>