<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>餐廳前台</h1>
      <ul class="nav nav-pills nav-pills-center">
        <li role="presentation" class="active"><%= link_to "全部餐廳", root_path %></li>
        <% @categories.each do |category| %>
          <li role="presentation"><%= link_to category.name, category_path(category) %></li>
        <% end %>
      </ul>
      <% @restaurants.each do |restautant| %>
        <div class="col-sm-6 col-md-4">
          <div class="restaurant-item">
            <%= image_tag restautant.image, class: "img-responsive center-block"%>
            <div class="caption">
              <h3><%= link_to(restautant.name, restaurant_path(restautant)) %></h3>
              <p class="label label-default"><%= restautant.category.name %></p>
              <p><%= truncate(restautant.description, length: 80) %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="text-center">
      <%= paginate @restaurants %>
    </div>
  </div>
</div>